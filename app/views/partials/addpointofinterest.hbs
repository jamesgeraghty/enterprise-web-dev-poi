<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/addpointofinterest" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Enter a Place of Interest</label><dl class="uk-description-list">
                    <dt>DESCRIPTION TERM</dt>
                    <dd>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</dd>
                </dl>

                    <div class="uk-margin">
                        <label class="uk-form-label" for="email">E-Mail</label>
                        <input type="text" name="email" id="form-s-text" placeholder="Enter your E-Mail address..." class="uk-input">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-form-label">Payment</div>
                    <div class="uk-form-controls">
                        <label><input class="uk-radio" type="radio" name="method" value="paypal" /> New</label><br />
                        <label><input class="uk-radio" type="radio" name="method" value="direct" /> Old </label>
                    </div>
                </div>
                <div class="js-upload" uk-form-custom>
                    <input type="file" name="image" multiple>
                    <button class="uk-button uk-button-default" type="button" name="image" tabindex="-1">Upload Image</button>
                </div>
            </div>
            <div class=" uk-width-1-2@m">
                <div class="uk-margin">
                    <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add</button>
                </div>
            </div>
        </div>
    </form>
</div>