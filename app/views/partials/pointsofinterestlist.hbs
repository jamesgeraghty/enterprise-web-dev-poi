<div class="uk-margin uk-width-10xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <table class="uk-table uk-table-striped">
        <caption>
            <h2>Places of Interest in Kilcash</h2>
        </caption>
        <thead>
        <th>Point of Interest</th>
        <th>Location</th>
        <th>Difficulty</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>User Name</th>
        <th>Categories</th>
        <th>Gallery</th>
        <th> Delete</th>
        <th> Update</th>



        <th></th>
        </thead>
        <tbody class="uk-text-left">
        {{#each pointsofinterest}}
            <tr>
                <td> {{poi}} </td>
                <td> {{text}} </td>
                <td> {{method}} </td>
                <td> {{latitude}} </td>
                <td> {{longitude}} </td>
                <td> {{donor.firstName}} {{donor.lastName}} </td>
                <td>{{category.name}}</td>
                <td><a href="/gallery" class="fas fa-camera fa-1x"></a></td>

                <td><a href="/delete-pointofinterest/{{_id}}" ><i title="Delete Point Of Interest" class="far fa-trash-alt fa-1x"></i></td>
               <td>
                    <a href='/update-pointofinterest/{{_id}}' > <i title="Delete Point Of Interest" class="far fa-edit fa-1x"></i>
               </td>

            </tr>
        {{/each}}
        </tbody>
    </table>
    <div>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
        <div class="center">
            <style>
                #map {height:400px; width: 670px;}
            </style>
        </div>
        <div id = "map"></div>
        <script>
            var map = L.map('map').setView([30, 10], 2);
            L.tileLayer('https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=lf6wzg5OvtmWsOgoIj2t',{
                attribution: "\u003ca href=\"https://www.maptiler.com/copyright/\" target=\"_blank\"\u003e\u0026copy; MapTiler\u003c/a\u003e \u003ca href=\"https://www.openstreetmap.org/copyright\" target=\"_blank\"\u003e\u0026copy; OpenStreetMap contributors\u003c/a\u003e",
            }).addTo(map);
                {{#each pointsofinterest}}
                var marker = L.marker ([{{latitude}}, {{longitude}}]).addTo(map);
                {{/each}}
        </script>
    </div>
</div>
